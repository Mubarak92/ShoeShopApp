<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoeShopApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- OnBoarding styles -->
    <style name="OnBoardingTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">24sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="OnBoardingSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">@dimen/text_xx_medium</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="OnBoarding.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/onboarding_button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_button_accent</item>
        <item name="android:textSize">@dimen/text_xx_medium</item>
        <item name="android:textColor">@drawable/button_text_color_selector</item>
    </style>

    <dimen name="text_xx_medium">16sp</dimen>
</resources>