<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.shoeshopapp.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_welcomScreenFragment"
            app:destination="@id/welcomScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.shoeshopapp.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_details"
            app:destination="@id/details" />
    </fragment>
    <fragment
        android:id="@+id/details"
        android:name="com.example.shoeshopapp.ui.Details"
        android:label="Details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="brandName"
            app:argType="string" />
        <argument
            android:name="brandDiscript"
            app:argType="string" />
        <argument
            android:name="brandImage"
            app:argType="integer" />
        <action
            android:id="@+id/action_details_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomScreenFragment"
        android:name="com.example.shoeshopapp.ui.WelcomScreenFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_welcom_screen">
        <action
            android:id="@+id/action_welcomScreenFragment_to_informationScreenFragment"
            app:destination="@id/informationScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/informationScreenFragment"
        android:name="com.example.shoeshopapp.ui.InformationScreenFragment"
        android:label="Information"
        tools:layout="@layout/fragment_information_screen">
        <action
            android:id="@+id/action_informationScreenFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>